{
  "name": "shared",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs",
        "tsConfig": "libs/tsconfig.lib.json",
        "packageJson": "libs/package.json",
        "main": "libs/src/index.ts",
        "assets": ["libs/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prisma generate --schema ./libs/src/prisma/schemas/base/schema.prisma",
          "prisma generate --schema ./libs/src/prisma/schemas/product/schema.prisma"
        ],
        "parallel": false
      }
    }
  }
}
